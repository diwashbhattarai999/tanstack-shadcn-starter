# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------

# Public application name (can be used in meta tags, logs, etc.)
VITE_APP_NAME=GymGrow

# Base public URL of the application (used for SEO, OG tags, redirects)
VITE_PUBLIC_URL=https://admin.gymgrow.com


# ------------------------------------------------------------------------------
# Development / Preview Server
# ------------------------------------------------------------------------------

# Host for Vite dev server and preview server
VITE_HOST=localhost

# Port for Vite development server
VITE_DEV_PORT=5173

# Port for Vite preview server (production build preview)
VITE_PREVIEW_PORT=4173


# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------

# Base URL for backend API requests
VITE_API_BASE_URL=https://api.gymgrow.com

# Request timeout in milliseconds
VITE_API_TIMEOUT=15000


# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------

# Enable or disable developer tools
# true  → Devtools enabled
# false → Devtools disabled
VITE_ENABLE_DEVTOOLS=true
